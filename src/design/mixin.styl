// 鼠标移上边框线
border-animate($color = $color-text-999, $radius = 4px, $font-color = #333)
  position: relative
  &:after
    content: ''
    border-top: 0.5px solid transparent
    border-bottom: 0.5px solid transparent
    position: absolute
    z-index: 5
    height: 100%
    width: 0
    right: 0
    top: -0.5px
    border-radius $radius
    transition: all 0.3s ease-out
  &:before
    content: ''
    border-right: 0.5px solid transparent
    border-left: 0.5px solid transparent
    position: absolute
    z-index: 5
    height: 0
    width: 100%
    bottom: 0
    left: 0
    border-radius $radius
    transition: all 0.3s ease-out
  &:hover
    color: $font-color
    transition: all 0.3s ease-out
    &:after
      border-color: $color
      transition: all 0.3s ease-out
      width: 100%
    &:before
      border-color: $color
      transition: all 0.3s ease-out
      height: 100%

// input边框 宽度= 原宽度 + 1; 高度= 原高度 + 1
input-animate($w, $h,$radius = 4px,$color = #999,$l = -1px, $t = -1px, $b = 0, $font-color = $color-text-main)
  $relative-width = 2
  position: relative
  box-sizing: content-box
  input, textarea, select
    border: 1px solid #D9D9D9
    position: relative
    z-index: 10
    border-radius :$radius
    width :($w - $relative-width)px
    height :($h - $relative-width)px
  .after
    border-top: 1px solid transparent
    border-bottom: 1px solid transparent
    position: absolute
    z-index: 5
    height: ($h)px
    width: 0
    right: 0
    top: $t
    border-radius $radius
    transition: all 0.4s ease-out
  .before
    border-right: 1px solid transparent
    border-left: 1px solid transparent
    position: absolute
    z-index: 5
    height: 0
    width: ($w)px
    bottom: $b
    left: $l
    border-radius $radius
    transition: all 0.4s ease-out
  &:hover
    input, textarea, select
      border: 1px solid transparent
      transition: all 0.4s ease-out
    .after
      border-color: $color
      transition: all 0.4s ease-out
      width: ($w)px
    .before
      border-color: $color
      transition: all 0.4s ease-out
      height: ($h)px
