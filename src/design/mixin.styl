border-top-1px($color = #E1E4E5)
  position: relative
  &:before
    content: ""
    position: absolute
    top: 0
    left: 0
    width: 100%
    border-top: 1px solid $color
    transform: scaleY(.5) translateZ(0)

border-right-1px($color)
  position: relative
  &:after
    content: ""
    position: absolute
    top: 0
    height: 100%
    right: 0
    transform: scaleX(.5) translateZ(0)
    border-right: 1px solid $color

border-bottom-1px($color = #E1E4E5)
  position: relative
  &:after
    content: ""
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    transform: scaleY(.5) translateZ(0)
    border-bottom: 1px solid $color

border-left-1px($color = #E1E4E51)
  position: relative
  &:after
    content: ""
    position: absolute
